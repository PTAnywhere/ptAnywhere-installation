#!/bin/bash
# Source: http://prakhar.me/articles/flask-on-nginx-and-gunicorn/

NUM_CORES=`grep -c "^core id" /proc/cpuinfo`

NAME="PacketTracer instances' management API"
# FLASKDIR=/Code/flask_app
VENVDIR={{ venv_path }}
SOCKFILE=/tmp/sock
USER={{ remote_user }}
GROUP={{ remote_group }}
# Recomendation for sync workers from official documentation: 2 x $(num_cores) + 1.
NUM_WORKERS=$(( $NUM_CORES*2+1 ))


echo "Starting $NAME"

# activate the virtualenv
cd $VENVDIR
source bin/activate

# export PYTHONPATH=$FLASKDIR:$PYTHONPATH

# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR

# Start your unicorn
exec gunicorn 'ptinstancemanager.wsgi:main("{{ config_file }}")' -b 127.0.0.1:8000 \
  --name "$NAME" \
  --workers $NUM_WORKERS \
  --user=$USER --group=$GROUP \
  --log-level=debug \
  --bind=unix:$SOCKFILE
